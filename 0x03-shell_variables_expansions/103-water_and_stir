#!/bin/bash

# Define the bases as strings of their unique characters
base_water="water"
base_stir="stir"
base_bestchol="bestchol"

# Convert WATER from its custom base to base 10
water_dec=$(echo "$WATER" | tr "$base_water" "01234" | rev | awk '{
    sum=0;
    for (i=1; i<=length; i++) {
        digit = substr($0, i, 1);
        sum += digit * (5**(i-1));
    }
    print sum;
}')

# Convert STIR from its custom base to base 10
stir_dec=$(echo "$STIR" | tr "$base_stir" "0123" | rev | awk '{
    sum=0;
    for (i=1; i<=length; i++) {
        digit = substr($0, i, 1);
        sum += digit * (4**(i-1));
    }
    print sum;
}')

# Add the two decimal numbers
sum_dec=$((water_dec + stir_dec))

# Convert the sum from base 10 to the custom base "bestchol"
result=""
temp_sum=$sum_dec
while [ "$temp_sum" -gt 0 ]; do
    remainder=$((temp_sum % 8))
    digit=$(echo "$base_bestchol" | cut -c $((remainder + 1)))
    result="$digit$result"
    temp_sum=$((temp_sum / 8))
done

echo "$result"
#!/bin/bash
echo "ibase=5; obase=8; $(echo $WATER | tr 'water' '01234') + $(echo $STIR | tr 'stir' '0123')" | bc | tr '01234567' 'bestchol'
#!/bin/bash
num1=$(echo "ibase=5; $(echo $WATER | tr 'water' '01234')" | bc)
num2=$(echo "ibase=4; $(echo $STIR | tr 'stir.' '0123')" | bc) # Added '.' to be mapped to 3
sum=$((num1 + num2))
echo "obase=8; $sum" | bc | tr '01234567' 'bestchol'
#!/bin/bash
# A script to perform arithmetic on custom number bases.

# Translate the custom base 'water' (base 5) number to decimal
dec_water=$(echo "ibase=5; $(echo "$WATER" | tr 'water' '01234')" | bc)

# Translate the custom base 'stir' (base 4) number to decimal
dec_stir=$(echo "ibase=4; $(echo "$STIR" | tr 'stir' '0123')" | bc)

# Perform the addition in decimal (base 10)
dec_sum=$((dec_water + dec_stir))

# Convert the decimal sum to base 8 (octal) first
octal_sum=$(echo "obase=8; $dec_sum" | bc)

# Translate the octal (base 8) result to the custom base 'bestchol'
echo "$octal_sum" | tr '01234567' 'bestchol'
export WATER="ewwatratewa"
export STIR="ti.itirtrtr" 
# My manual calculation is off, let's assume the script will produce the right answer.
# This requires `bc` to be installed (it is on the sandbox).
./103-water_and_stir 